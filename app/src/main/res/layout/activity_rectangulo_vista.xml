<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vistas.RectanguloVista">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10mm"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10mm"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/txvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculadora de rectangulos"
            android:textAlignment="center"
            android:textColor="#3F51B5"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="50px"/>

        <EditText
            android:id="@+id/txtBase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Captura la base del rectangulo"
            android:textAlignment="center"
            android:layout_marginTop="50px"
            android:textSize="20dp"
            android:textStyle="italic"
            android:layout_margin="15dp"/>

        <EditText
            android:id="@+id/txtAltura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Captura la altura del rectangulo"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:textSize="20dp"
            android:textStyle="italic"
            android:layout_margin="15dp"/>

        <Button
            android:id="@+id/btnShowArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcula Area"
            android:layout_marginTop="25dp"
            android:layout_margin="15dp"
            android:textSize="20dp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/txvArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Area : "
            android:textAlignment="center"
            android:textColor="#3F51B5"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="50px"/>

        <Button
            android:id="@+id/btnShowPerimetro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcula Perimetro"
            android:layout_marginTop="25dp"
            android:layout_margin="15dp"
            android:textSize="20dp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/txvPerimetro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perimetro : "
            android:textAlignment="center"
            android:textColor="#3F51B5"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="50px"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>